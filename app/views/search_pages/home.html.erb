<% provide(:title, "Home") %>

<div class="center jumbotron">
  <h1>Welcome to Ginvite</h1>
  <h2>
    <%= form_tag root_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :artist => nil %>
      </p>
    <% end %>
  </h2>
</div>

<div class="center jumbotron">
<table border="1">
  <tr>
    <th>公演場所</th><th>日程</th><th>タイトル</th><th>アーティスト名</th>
  </tr>

  <% @gig.each do |gig| %>
    <tr>
      <td><%= gig.place %></td>
      <td><%= gig.gig_date %></td>
      <td><%= gig.title %></td>
      <td><%= gig.artist %></td>
    </tr>
  <% end %>
</table>
</div>
